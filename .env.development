# ===============================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ===============================================================
# Use this template for local development
# Copy to .env.development and update with your development values

# --------------------------
# Environment Settings
# --------------------------
NODE_ENV=development
ENVIRONMENT=development

# --------------------------
# Exchange API Configuration
# --------------------------
# Use testnet/demo keys for development
BINANCE_API_KEY=your_dev_binance_api_key
BINANCE_API_SECRET=your_dev_binance_api_secret

# Bitkub development credentials
BITKUB_API_KEY=your_dev_bitkub_api_key
BITKUB_API_SECRET=your_dev_bitkub_api_secret

# --------------------------
# AI Configuration
# --------------------------
# Development AI keys
GEMINI_API_KEY=your_dev_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash-exp

# Additional AI providers
OPENAI_API_KEY=your_dev_openai_api_key
OPENAI_DEFAULT_MODEL=gpt-4

CLAUDE_API_KEY=your_dev_claude_api_key
CLAUDE_DEFAULT_MODEL=claude-3-5-sonnet-20241022

# --------------------------
# AI Ensemble Configuration
# --------------------------
# Test ensemble in development
ENSEMBLE_ENABLED=true
ENSEMBLE_MIN_PROVIDERS=2
ENSEMBLE_CONSENSUS_THRESHOLD=0.6

# AI Caching for development
AI_CACHING_ENABLED=true
AI_CACHE_TTL=300
AI_CACHE_MAX_SIZE=100

# --------------------------
# Database Configuration
# --------------------------
# Development database
DATABASE_PATH=./data/trading_dev.db
DATABASE_BACKUP_ENABLED=false

# --------------------------
# Risk Management Configuration
# --------------------------
# Aggressive development settings for testing
RISK_PER_TRADE_PERCENTAGE=5
MAX_DAILY_LOSS_PERCENTAGE=15
MAX_CONCURRENT_POSITIONS=5
DEFAULT_STOP_LOSS_PERCENTAGE=2
DEFAULT_TAKE_PROFIT_PERCENTAGE=4

# --------------------------
# Trading Configuration
# --------------------------
# Paper trading only for development
TRADING_ENABLED=false
PAPER_TRADING_ENABLED=true
SIMULATION_MODE=true
MIN_TRADE_AMOUNT_USD=1
MAX_TRADES_PER_HOUR=20
POSITION_CHECK_INTERVAL_SECONDS=10

# --------------------------
# Logging Configuration
# --------------------------
# Verbose logging for development
LOG_LEVEL=debug
LOG_FILE=./logs/trading_dev.log
LOG_STRUCTURED=false
LOG_JSON_FORMAT=false

# --------------------------
# Dashboard Configuration
# --------------------------
# Development dashboard
DASHBOARD_PORT=3000
DASHBOARD_ENABLED=true
DASHBOARD_AUTH_ENABLED=false

# --------------------------
# Mobile Alert Configuration
# --------------------------
# Development alerts (optional)
ALERT_WEBHOOK_URL=your_dev_discord_or_telegram_webhook

# --------------------------
# Performance & Monitoring
# --------------------------
# Development monitoring
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=3001
METRICS_ENABLED=true
METRICS_PORT=9090

# --------------------------
# Development Features
# --------------------------
# Enable all development features
DEBUG=true
SIMULATION_MODE=true
HOT_RELOAD_ENABLED=true
API_DOCS_ENABLED=true
TEST_DATA_GENERATION_ENABLED=true