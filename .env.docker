# =============================================================================
# AI Trading Platform - Docker Environment Configuration
# Phase 2.4 Multi-Exchange Expansion
# =============================================================================
# Copy this file to .env and update with your actual values
# =============================================================================

# Build Configuration
BUILD_DATE=2024-01-01T00:00:00Z
VERSION=1.0.0
GIT_COMMIT=local

# =============================================================================
# EXCHANGE API CONFIGURATION
# =============================================================================

# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Bitkub API Configuration (Thai Market)
BITKUB_API_KEY=your_bitkub_api_key_here
BITKUB_API_SECRET=your_bitkub_api_secret_here

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================

# Primary AI Provider (Required)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# Optional: Multi-Provider AI Support
OPENAI_API_KEY=
CLAUDE_API_KEY=
CUSTOM_AI_API_KEY=
CUSTOM_AI_BASE_URL=http://localhost:8000/v1

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Trading Control
TRADING_ENABLED=false
PAPER_TRADING_ENABLED=true

# Risk Management
RISK_PER_TRADE_PERCENTAGE=5
MAX_DAILY_LOSS_PERCENTAGE=10
MAX_CONCURRENT_POSITIONS=3
DEFAULT_STOP_LOSS_PERCENTAGE=2
DEFAULT_TAKE_PROFIT_PERCENTAGE=4

# Trading Limits
MIN_TRADE_AMOUNT_USD=10
MAX_TRADES_PER_HOUR=10
POSITION_CHECK_INTERVAL_SECONDS=30

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Configuration
POSTGRES_DB=trading_platform
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=secure_password_change_me
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=redis_password_change_me
REDIS_PORT=6379

# =============================================================================
# PORT CONFIGURATION
# =============================================================================

# Application Ports
DASHBOARD_PORT=3000
HEALTH_CHECK_PORT=3001

# Monitoring Ports
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002

# Nginx Ports
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

LOG_LEVEL=info
LOG_FILE=./logs/trading.log

# =============================================================================
# ALERT CONFIGURATION
# =============================================================================

# Discord/Telegram Webhook
ALERT_WEBHOOK_URL=

# Email Configuration
ALERT_EMAIL_SMTP_HOST=
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USER=
ALERT_EMAIL_PASS=
ALERT_EMAIL_TO=your_email@example.com

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=grafana_password_change_me

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS_PER_MINUTE=100

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3002

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# ENVIRONMENT-SPECIFIC SETTINGS
# =============================================================================

# Environment
NODE_ENV=production
TZ=Asia/Bangkok

# Feature Flags
ENSEMBLE_ENABLED=false
AI_CACHING_ENABLED=true
AI_CACHE_TTL=300
AI_CACHE_MAX_SIZE=1000

# =============================================================================
# MULTI-EXCHANGE ARBITRAGE CONFIGURATION
# =============================================================================

# Arbitrage Settings
ARBITRAGE_ENABLED=false
ARBITRAGE_MIN_PROFIT_PERCENT=0.5
ARBITRAGE_MIN_PROFIT_AMOUNT=10
ARBITRAGE_MAX_RISK_PERCENT=5

# =============================================================================
# THAI MARKET COMPLIANCE (Phase 2.4)
# =============================================================================

# Thai Market Configuration
THAI_MARKET_ENABLED=true
THAI_TRADING_HOURS_START=10:00
THAI_TRADING_HOURS_END=22:00
THAI_COMPLIANCE_CHECKS=true

# =============================================================================
# DEVELOPMENT SETTINGS (SET TO false IN PRODUCTION)
# =============================================================================

DEBUG=false
DEV_MODE=false
HOT_RELOAD=false