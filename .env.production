# ===============================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===============================================================
# Use this template for production deployments
# Copy to .env.production and update with production values

# --------------------------
# Environment Settings
# --------------------------
NODE_ENV=production
ENVIRONMENT=production

# --------------------------
# Exchange API Configuration
# --------------------------
# IMPORTANT: Use production API keys for live trading
BINANCE_API_KEY=your_production_binance_api_key
BINANCE_API_SECRET=your_production_binance_api_secret

# Bitkub (Thai market) - Production credentials
BITKUB_API_KEY=your_production_bitkub_api_key
BITKUB_API_SECRET=your_production_bitkub_api_secret

# --------------------------
# AI Configuration
# --------------------------
# Primary AI Provider
GEMINI_API_KEY=your_production_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash-exp

# Backup AI Providers for resilience
OPENAI_API_KEY=your_production_openai_api_key
OPENAI_DEFAULT_MODEL=gpt-4-turbo-preview

CLAUDE_API_KEY=your_production_claude_api_key
CLAUDE_DEFAULT_MODEL=claude-3-5-sonnet-20241022

# Custom AI Provider (if applicable)
CUSTOM_AI_API_KEY=your_custom_ai_api_key
CUSTOM_AI_BASE_URL=https://your-custom-ai-endpoint.com/v1
CUSTOM_AI_DEFAULT_MODEL=llama-3.1-70b

# --------------------------
# AI Ensemble Configuration
# --------------------------
# Enable ensemble for better decision accuracy
ENSEMBLE_ENABLED=true
ENSEMBLE_MIN_PROVIDERS=2
ENSEMBLE_CONSENSUS_THRESHOLD=0.6

# AI Caching for performance
AI_CACHING_ENABLED=true
AI_CACHE_TTL=300
AI_CACHE_MAX_SIZE=1000

# --------------------------
# Database Configuration
# --------------------------
# Production database path - ensure persistent storage
DATABASE_PATH=/app/data/trading.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL_HOURS=6

# --------------------------
# Risk Management Configuration
# --------------------------
# Conservative production settings
RISK_PER_TRADE_PERCENTAGE=2
MAX_DAILY_LOSS_PERCENTAGE=5
MAX_CONCURRENT_POSITIONS=2
DEFAULT_STOP_LOSS_PERCENTAGE=1.5
DEFAULT_TAKE_PROFIT_PERCENTAGE=3

# Advanced risk controls
MAX_POSITION_SIZE_USD=1000
MAX_PORTFOLIO_RISK_PERCENTAGE=10
VOLATILITY_ADJUSTMENT_ENABLED=true
CORRELATION_LIMIT_ENABLED=true

# --------------------------
# Trading Configuration
# --------------------------
# Trading control
TRADING_ENABLED=true
MIN_TRADE_AMOUNT_USD=50
MAX_TRADES_PER_HOUR=5
POSITION_CHECK_INTERVAL_SECONDS=15

# Trading session controls
TRADING_SESSION_ENABLED=true
TRADING_HOURS_START=09:00
TRADING_HOURS_END=21:00
WEEKEND_TRADING_ENABLED=false

# Emergency controls
EMERGENCY_STOP_ENABLED=true
EMERGENCY_STOP_ON_LOSS_PERCENTAGE=8
MANUAL_OVERRIDE_ENABLED=true

# --------------------------
# Logging Configuration
# --------------------------
# Production logging with structured output
LOG_LEVEL=warn
LOG_FILE=/app/logs/trading.log
LOG_STRUCTURED=true
LOG_JSON_FORMAT=true

# Log rotation
LOG_ROTATION_ENABLED=true
LOG_MAX_SIZE_MB=100
LOG_MAX_FILES=30

# Audit logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_FILE=/app/logs/audit.log
TRADE_LOG_ENABLED=true
TRADE_LOG_FILE=/app/logs/trades.log

# --------------------------
# Dashboard Configuration
# --------------------------
# Production dashboard settings
DASHBOARD_PORT=3000
DASHBOARD_ENABLED=true
DASHBOARD_AUTH_ENABLED=true
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=change_me_in_production

# Dashboard security
DASHBOARD_RATE_LIMIT_ENABLED=true
DASHBOARD_RATE_LIMIT_REQUESTS_PER_MINUTE=60
DASHBOARD_SESSION_TIMEOUT_MINUTES=30

# --------------------------
# Mobile Alert Configuration
# --------------------------
# Production alert delivery
ALERT_WEBHOOK_URL=your_production_discord_or_telegram_webhook
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USER=your_production_email@gmail.com
ALERT_EMAIL_PASS=your_production_app_password
ALERT_EMAIL_TO=trading-alerts@yourcompany.com

# SMS alerts (optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
ALERT_SMS_TO=+1234567890

# Alert thresholds
ALERT_ON_TRADE_EXECUTION=true
ALERT_ON_STOP_LOSS=true
ALERT_ON_TAKE_PROFIT=true
ALERT_ON_DAILY_LOSS_THRESHOLD=true
ALERT_DAILY_LOSS_THRESHOLD_PERCENTAGE=3

# --------------------------
# Performance & Monitoring
# --------------------------
# Application performance monitoring
APM_ENABLED=true
APM_SERVICE_NAME=ai-trading-bot
APM_ENVIRONMENT=production

# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=3001
HEALTH_CHECK_ENDPOINT=/health

# Metrics collection
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_ENDPOINT=/metrics

# --------------------------
# Security Configuration
# --------------------------
# API security
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS_PER_MINUTE=100
CORS_ENABLED=true
CORS_ORIGINS=https://yourdomain.com

# Security headers
HELMET_ENABLED=true
XSS_PROTECTION_ENABLED=true
CONTENT_TYPE_NOSNIFF_ENABLED=true

# --------------------------
# Backup & Recovery
# --------------------------
# Automated backups
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key
BACKUP_RETENTION_DAYS=90

# Disaster recovery
RECOVERY_MODE_ENABLED=false
FAILOVER_ENABLED=true
FAILOVER_URL=https://backup-trading-bot.herokuapp.com

# --------------------------
# Development Overrides (DO NOT USE IN PRODUCTION)
# --------------------------
# DEBUG=false
# SIMULATION_MODE=false
# PAPER_TRADING_ONLY=false