# ===============================================================
# STAGING ENVIRONMENT CONFIGURATION
# ===============================================================
# Use this template for staging/testing deployments
# Copy to .env.staging and update with staging values

# --------------------------
# Environment Settings
# --------------------------
NODE_ENV=staging
ENVIRONMENT=staging

# --------------------------
# Exchange API Configuration
# --------------------------
# Use sandbox/testnet APIs for staging
BINANCE_API_KEY=your_staging_binance_api_key
BINANCE_API_SECRET=your_staging_binance_api_secret

# Bitkub test credentials
BITKUB_API_KEY=your_staging_bitkub_api_key
BITKUB_API_SECRET=your_staging_bitkub_api_secret

# --------------------------
# AI Configuration
# --------------------------
# AI providers for staging
GEMINI_API_KEY=your_staging_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash-exp

# Additional AI providers
OPENAI_API_KEY=your_staging_openai_api_key
OPENAI_DEFAULT_MODEL=gpt-4-turbo-preview

CLAUDE_API_KEY=your_staging_claude_api_key
CLAUDE_DEFAULT_MODEL=claude-3-5-sonnet-20241022

# --------------------------
# AI Ensemble Configuration
# --------------------------
# Enable ensemble for testing
ENSEMBLE_ENABLED=true
ENSEMBLE_MIN_PROVIDERS=2
ENSEMBLE_CONSENSUS_THRESHOLD=0.6

# AI Caching for testing
AI_CACHING_ENABLED=true
AI_CACHE_TTL=300
AI_CACHE_MAX_SIZE=500

# --------------------------
# Database Configuration
# --------------------------
# Staging database
DATABASE_PATH=./data/trading_staging.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL_HOURS=24

# --------------------------
# Risk Management Configuration
# --------------------------
# Moderate staging settings
RISK_PER_TRADE_PERCENTAGE=3
MAX_DAILY_LOSS_PERCENTAGE=8
MAX_CONCURRENT_POSITIONS=3
DEFAULT_STOP_LOSS_PERCENTAGE=2
DEFAULT_TAKE_PROFIT_PERCENTAGE=4

# --------------------------
# Trading Configuration
# --------------------------
# Paper trading for staging
TRADING_ENABLED=false
PAPER_TRADING_ENABLED=true
MIN_TRADE_AMOUNT_USD=10
MAX_TRADES_PER_HOUR=10
POSITION_CHECK_INTERVAL_SECONDS=30

# --------------------------
# Logging Configuration
# --------------------------
# Verbose logging for staging
LOG_LEVEL=debug
LOG_FILE=./logs/trading_staging.log
LOG_STRUCTURED=true
LOG_JSON_FORMAT=true

# --------------------------
# Dashboard Configuration
# --------------------------
# Staging dashboard
DASHBOARD_PORT=3000
DASHBOARD_ENABLED=true
DASHBOARD_AUTH_ENABLED=true
DASHBOARD_USERNAME=staging
DASHBOARD_PASSWORD=staging123

# --------------------------
# Mobile Alert Configuration
# --------------------------
# Staging alerts
ALERT_WEBHOOK_URL=your_staging_discord_or_telegram_webhook
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USER=your_staging_email@gmail.com
ALERT_EMAIL_PASS=your_staging_app_password
ALERT_EMAIL_TO=staging-alerts@yourcompany.com

# --------------------------
# Performance & Monitoring
# --------------------------
# Staging monitoring
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=3001
METRICS_ENABLED=true
METRICS_PORT=9090

# --------------------------
# Testing Configuration
# --------------------------
# Enable testing features
DEBUG=true
SIMULATION_MODE=true
PERFORMANCE_TESTING_ENABLED=true