# =============================================================================
# AI Trading Platform - Development Dockerfile
# Optimized for development with hot reload and debugging
# =============================================================================

FROM node:18-alpine

# Install development dependencies
RUN apk add --no-cache \
    curl \
    git \
    python3 \
    make \
    g++

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source code
COPY src/ ./src/
COPY .env.example ./.env.example

# Create necessary directories
RUN mkdir -p data logs config

# Expose ports
EXPOSE 3000 3001 9229

# Development command
CMD ["npm", "run", "dev"]